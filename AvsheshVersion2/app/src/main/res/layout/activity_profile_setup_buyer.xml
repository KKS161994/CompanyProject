<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    tools:context="kaustav.test.android.avsheshversion2.ProfileSetupBuyer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Update Profile"
                android:textStyle="bold"
                android:paddingTop="25dp"
                android:paddingLeft="25dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:id="@+id/username"
                android:hint="Name"
                android:paddingTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/prim_mob_no"
                android:hint="Primary mobile number"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Please provide your business phone number"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Add Extra number:"
                android:textColor="#000000"
                android:paddingTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="WhatsApp Contact"
                android:textColor="#000000"
                android:paddingTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/whatsapp_no"
                android:hint="Contact number"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:gravity="end"
                    android:paddingTop="3dp"
                    android:layout_height="wrap_content"
                    android:text="Add additional number"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_new"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Type of Scrap you prefer to deal"
                android:textStyle="bold"
                android:paddingTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:id="@+id/scrap_type"
                android:hint="Iron,Cast Iron,Aluminium,etc"
                android:paddingTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Company Details"
                android:textStyle="bold"
                android:paddingTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:id="@+id/comp_name"
                android:hint="Company name"
                android:paddingTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/land_no"
                android:hint="Landline number"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:id="@+id/buy_update"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

